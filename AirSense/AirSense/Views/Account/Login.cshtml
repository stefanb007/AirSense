@model AirSense.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm(FormMethod.Post))
{
<h2>Login</h2>
<div>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @style = "width: 100%" } })
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "width: 100%" } })
    </div>
</div>
<div>
    <ul>
        <li>@Html.ValidationMessageFor(x => x.Username, "", new { htmlAttributes = new  { @class = "text-danger", @style = "color: white" } } )</li>
        <li>@Html.ValidationMessageFor(x => x.Password , "", new { @class = "text-danger" })</li>
    </ul>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Login" class="btn btn-default" />
    </div>
</div>
}